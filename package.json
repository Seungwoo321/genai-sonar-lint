{
  "name": "genai-sonar-lint",
  "version": "0.2.0-beta.2",
  "description": "AI-powered ESLint/SonarJS analyzer and fixer using Claude Code or Cursor CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "genai-sonar-lint": "./bin/genai-sonar-lint.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seungwoo321/genai-sonar-lint.git"
  },
  "bugs": {
    "url": "https://github.com/Seungwoo321/genai-sonar-lint/issues"
  },
  "homepage": "https://github.com/Seungwoo321/genai-sonar-lint#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "eslint",
    "sonarjs",
    "ai",
    "claude",
    "cursor",
    "lint",
    "fixer",
    "cli",
    "code-quality",
    "genai-sonar-lint"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^20.11.0",
    "release-it": "^19.2.3",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
